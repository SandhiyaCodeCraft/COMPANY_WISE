n=int(input("Enter the month:"))
if n==12 or n==1 or n==2:
    print("season:winter")
elif n>=3 and n<=5:
    print("Season:spring")
elif n>=6 and n<=8:
    print("Season:summer")
elif n>=9 and n<=11:
    print("Season:Autumn")

